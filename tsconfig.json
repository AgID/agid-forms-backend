{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["src/@types/*"] },
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "include": ["./src/**/*", "./templates/**/*.ts"],
  "exclude": ["node_modules"]
}
