{
  "name": "spid-proxy",
  "version": "0.1.1",
  "description": "SPID proxy",
  "main": "index.js",
  "engines": {
    "node": "8.11.3"
  },
  "scripts": {
    "prepare": "patch-package",
    "build": "tsc",
    "watch": "tsc -w",
    "build-noemit": "tsc --noEmit",
    "hot-reload": "nodemon src/server.js",
    "lint": "tslint -p . -c tslint.json -t verbose",
    "lint-autofix": "tslint -p . -c tslint.json -t verbose --fix",
    "prettify": "prettier --write \"./**/*.ts\"",
    "test": "jest -i",
    "start": "node src/server.js",
    "generate:proxy-models": "npm-run-all generate:proxy:*",
    "generate:proxy:api-models": "gen-api-models --api-spec api_proxy.yaml --no-strict --out-dir src/types/api",
    "generate:jsonapi:api-models": "gen-api-models --api-spec jsonapi.yaml --no-strict --out-dir src/types/jsonapi",
    "generate:test-certs": "./scripts/generate-test-certs.sh certs",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gunzip/spid-proxy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gunzip/spid-proxy/issues"
  },
  "homepage": "https://github.com/gunzip/spid-proxy#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.2",
    "express-enforces-ssl": "1.1.0",
    "express-http-proxy": "^1.5.1",
    "helmet": "3.13.0",
    "io-ts": "^1.3.0",
    "io-ts-types": "^0.3.14",
    "italia-ts-commons": "^5.0.0",
    "json-set-map": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.2.0",
    "passport": "^0.4.0",
    "passport-auth-token": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-strategy": "^1.0.0",
    "patch-package": "^5.1.1",
    "redis": "^2.8.0",
    "redis-clustr": "^1.6.0",
    "spid-passport": "git://github.com/teamdigitale/spid-passport.git#v1.1.1",
    "typescript": "^3.0.3",
    "ulid": "^2.2.2",
    "winston": "^3.0.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/express": "4.16.0",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/helmet": "^0.0.41",
    "@types/jest": "^23.3.3",
    "@types/lolex": "2.1.3",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^2.1.2",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-strategy": "^0.2.35",
    "@types/redis": "^2.8.5",
    "@types/xmldom": "^0.1.29",
    "@types/express-http-proxy": "^1.5.2",
    "@types/jsonwebtoken": "^8.3.2",
    "danger": "^4.0.2",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "fp-ts": "^1.8.1",
    "italia-tslint-rules": "^0.1.1",
    "italia-utils": "^3.14.14",
    "jest": "^23.6.0",
    "lolex": "2.7.5",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-sonarts": "^1.7.0",
    "typestrict": "^1.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/**/*.d.ts"
    ]
  }
}
