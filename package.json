{
  "name": "agid-forms-backend",
  "version": "0.4.0",
  "description": "agid-forms-backend",
  "main": "index.js",
  "engines": {
    "node": "8.11.3"
  },
  "scripts": {
    "prepare": "patch-package",
    "build": "tsc",
    "watch": "tsc -w",
    "build-noemit": "tsc --noEmit",
    "hot-reload": "nodemon src/server.js",
    "lint": "tslint -p . -c tslint.json -t verbose",
    "lint-autofix": "tslint -p . -c tslint.json -t verbose --fix",
    "prettify": "prettier --write \"./**/*.ts\"",
    "test": "jest -i",
    "start": "node src/server.js",
    "generate:templates": "gulp generate:templates",
    "generate:backend:api-models": "gen-api-models --api-spec api_backend.yaml --no-strict --out-dir src/types/api",
    "generate:jsonapi:api-models": "gen-api-models --api-spec jsonapi.yaml --no-strict --out-dir src/types/jsonapi",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AGID/agid-forms-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AGID/agid-forms-backend/issues"
  },
  "homepage": "https://github.com/AGID/agid-forms-backend#readme",
  "dependencies": {
    "apollo-cache-inmemory": "^1.6.1",
    "apollo-client": "^2.6.1",
    "apollo-link-http": "^1.5.14",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "email-templates": "^5.0.5",
    "express": "^4.16.2",
    "express-enforces-ssl": "1.1.0",
    "fp-ts": "^1.8.1",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "helmet": "3.13.0",
    "io-ts": "^1.8.5",
    "io-ts-types": "^0.3.14",
    "italia-ts-commons": "^5.1.4",
    "json-set-map": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.2.0",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-auth-token": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-strategy": "^1.0.0",
    "patch-package": "^5.1.1",
    "randomstring": "^1.1.5",
    "redis": "^2.8.0",
    "redis-clustr": "^1.6.0",
    "typescript": "^3.0.3",
    "ulid": "^2.2.2",
    "winston": "^3.0.0",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/email-templates": "^3.5.1",
    "@types/express": "4.16.0",
    "@types/express-enforces-ssl": "^1.1.1",
    "@types/graphql": "^14.2.0",
    "@types/helmet": "^0.0.41",
    "@types/html-to-text": "^1.4.31",
    "@types/jest": "^23.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lolex": "2.1.3",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^2.1.2",
    "@types/nodemailer": "^6.1.1",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-strategy": "^0.2.35",
    "@types/randomstring": "^1.1.6",
    "@types/redis": "^2.8.5",
    "gulp": "^4.0.2",
    "gulp-prettier": "^2.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-text-simple": "^0.5.2",
    "html-to-text": "^5.1.1",
    "italia-tslint-rules": "^1.1.3",
    "italia-utils": "^3.14.14",
    "jest": "^23.6.0",
    "lolex": "2.7.5",
    "mjml": "^4.4.0-beta.2",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.17.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typestrict": "^1.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!src/**/*.d.ts"
    ]
  }
}
