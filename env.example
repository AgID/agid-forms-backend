#!/usr/bin/env bash

NODE_ENV=
COMPOSE_PROJECT_NAME=

#
# BACKEND
#
BACKEND_VERSION=1.4.2
BACKEND_HOST=
AUTHENTICATION_BASE_PATH=""
WEBHOOK_USER_LOGIN_BASE_URL=http://backend
ORGANIZATION_NAME=
SERVICE_NAME=
AUTHMAIL_FROM=
AUTHMAIL_REPLY_TO=
# TODO: delete the following line
AUTHMAIL_TEST_ADDRESS=
# 30 days
TOKEN_DURATION_IN_SECONDS=2592000

SMTP_CONNECTION_URL=
WEBHOOK_JWT_SECRET=
JWT_SECRET=

#
# POSTGRESQL
#
# POSTGRES_USERNAME=postgres
POSTGRESQL_PASSWORD=
POSTGRESQL_DATABASE=
POSTGRESQL_INITDB_WALDIR=/bitnami/wal-logs

#
# HASURA
#
# external hasura url
HASURA_HOST=https://database.example.com
HASURA_PORT=8080
# needed internally
HASURA_GRAPHQL_ENDPOINT=http://hasura/v1/graphql
HASURA_GRAPHQL_UNAUTHORIZED_ROLE=anonymous

EVENTS_WEBHOOK_URL=http://backend/api/v1/graphql/events
HASURA_GRAPHQL_ENABLE_CONSOLE=false

HASURA_GRAPHQL_DATABASE_URL=postgres://postgres:<POSTGRESQL_PASSWORD>@postgresql:5432/<POSTGRESQL_DATABASE>
HASURA_WEBHOOK_SECRET=
HASURA_GRAPHQL_ADMIN_SECRET=
HASURA_GRAPHQL_JWT_SECRET={"type":"HS256","key":"<TBD>"}

#
# REDIS
#
REDIS_HOST=redis
REDIS_URL=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=300
REDIS_TCP_KEEPALIVE=60
REDIS_MAXMEMORY=512m

#
# TRAEFIK
#
TRAEFIK_DOMAIN=
TRAEFIK_DASHBOARD_PORT=7777
TRAEFIK_ACME_EMAIL=
TRAEFIK_DASHBOARD_USER=traefik
TRAEFIK_DASHBOARD_PASSWORD=

#
# MINIO
#
MINIO_SERVER_HOST=minio
MINIO_ACCESS_KEY=minio-access-key
MINIO_SECRET_KEY=minio-secret-key
# the docker image creates this buckets on startup
MINIO_DEFAULT_BUCKETS='my-first-bucket,my-second-bucket'
MINIO_SERVER_PORT_NUMBER=9000

UPLOAD_SERVER_PORT=9000
UPLOAD_SERVER_HOST=uploads
